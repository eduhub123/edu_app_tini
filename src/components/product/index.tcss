.item-product {
  padding: 4px 8px;
  align-items: center;
  border-radius: 10px;
  box-shadow: 3px 3px 2px rgba(0, 0, 0, 0.05);
}

.image-wrap {
  display: flex;
}

.image-product {
  width: 40px;
  height: 40px;
  margin: auto;
  border-radius: 8px;
}

.product-name {
  font-size: 14px;
  font-weight: 500;
  line-height: 21px;
}
